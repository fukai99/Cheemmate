<h4><%= link_to @user.disply_name %>さんのBookmark一覧</h4>

<% if @bookmarks.any? %>
  <% @bookmarks.each do |bookmark| %>
    <p>投稿日時: <%= bookmark.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    <p>ジャンル名:<%= bookmark.genre.name %></p>
    <%= bookmark.content %><br>

    <% if bookmark.images.attached? %>
      <% bookmark.images.each do |image| %>
        <%= image_tag image, size: "150x150" %>
      <% end %>
    <% end %><br>
    
    <% bookmark.youtube_urls.each do |youtube_url| %>
      <iframe width="224" height="126" src="https://www.youtube.com/embed/<%= youtube_url.path %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe><br>
    <% end %>
    
    <% if post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(post), method: :delete do %>
        <i class="fas fa-heart" style="color: #eca7df;"></i>
        <%= post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(post), method: :post do %>
        <i class="far fa-heart"></i>
        <%= post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  
    <% if post.favorited_by?(current_user) %>
    <p>
      <%= link_to user_bookmarks_path(post), method: :delete do %>
        <i class="fa-solid fa-bookmark" style="color: #335899;"></i>
        
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to user_bookmarks_path(post), method: :post do %>
        <i class="fal-regular fa-bookmark"></i>
        
      <% end %>
    </p>
  <% end %>
    
  <p>コメント件数：<%= link_to post.comments.count, post_path(post.id) %></p>

  <% if current_user == post.user %>
    <%= link_to "編集", edit_post_path(post) %>
    <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？" } %>
  <% else %>
    <%= link_to "コメントする", post_path(post.id) %>
  <% end %><br>

  <% end %>
<% else %>
  <h4>投稿がありません。<br>
  bookmarkしてみましょう！<br>
  <%= link_to "投稿一覧へ", posts_path %></h4>
<% end %>