<h4><%= link_to @user.disply_name %>さんのBookmark一覧</h4>

<% if @bookmarks.any? %>
  <% @bookmarks.each do |bookmark| %>
    <p><%= bookmark.post.created_at.strftime("%Y/%m/%d") %> &nbsp;&nbsp; <%= bookmark.post.content %></p>
    <p>ジャンル:<%= bookmark.post.genre.name %></p>
    

    <% if bookmark.post.images.attached? %>
      <% bookmark.post.images.each do |image| %>
        <%= image_tag image, size: "150x150" %>
      <% end %>
    <% end %><br>

    <% bookmark.post.youtube_urls.each do |youtube_url| %>
      <iframe width="224" height="126" src="https://www.youtube.com/embed/<%= youtube_url.path %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe><br>
    <% end %>

    <% if bookmark.post.favorited_by?(current_user) %>
      <p>
      <%= link_to post_favorites_path(bookmark.post), method: :delete do %>
        <i class="fas fa-heart" style="color: #eca7df;"></i>
        <%= bookmark.post.favorites.count %>
      <% end %>
      </p>
    <% else %>
      <p>
      <%= link_to post_favorites_path(bookmark.post), method: :post do %>
        <i class="far fa-heart" style="color: #eca7df;"></i>
        <%= bookmark.post.favorites.count %>
        <% end %>
      </p>
    <% end %>

    <% if bookmark.post.bookmarked_by?(current_user) %>
      <p>
        <%= link_to post_bookmarks_path(bookmark.post), method: :delete do %>
          <i class="fas fa-bookmark" style="color: #5884d0;"></i>
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to post_bookmarks_path(bookmark.post), method: :post do %>
          <i class="far fa-bookmark" style="color: #5884d0;"></i>
        <% end %>
      </p>
    <% end %>
    
    <% if current_user.commented_on?(bookmark.post) %>
  <p><i class="fas fa-comment" style="color: #48350e;"></i><%= link_to bookmark.post.comments.count, post_path(bookmark.post) %></p>
<% else %>
  <p><i class="far fa-comment" style="color: #48350e;"></i><%= link_to bookmark.post.comments.count, post_path(bookmark.post) %></p>
<% end %>
    <% if current_user == bookmark.user %>
      <%= link_to "編集", edit_post_path(bookmark.post) %>
      <%= link_to "削除", post_path(bookmark.post), method: :delete, data: { confirm: "削除しますか？" } %>
    <% end %>
    
    

  <% end %>
<% else %>
  <h4>まだ保存された投稿がありません。<br>
  bookmarkしてみましょう！<br>
  <%= link_to "投稿一覧へ", posts_path %></h4>
<% end %>