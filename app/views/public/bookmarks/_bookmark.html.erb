<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post), method: :delete, remote: true, data: {"turbolinks" => false} do %>
    <i class="fas fa-bookmark" style="color: #5884d0;"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true, data: {"turbolinks" => false} do %>
    <i class="far fa-bookmark" style="color: #5884d0;"></i>
  <% end %>
<% end %> &nbsp;&nbsp;