<div class="float-right">
  <%= render 'public/searches/search' %>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, posts_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-10">
      <div class="text-center">
        <h2>投稿一覧</h2>
      </div>
      <% @posts.each do |post| %>
        <div class="row border-bottom">
          <div class="col-3">
            <%= image_tag post.user.get_avatar(70, 70) %>
            <p>氏名<%= link_to post.user.disply_name, user_path(post.user) %></p>
            <%= post.user.is_member ? '生徒' : '家族' %>
          </div>

          <div class="col-7">
            <p><%= post.created_at.strftime("%Y/%m/%d") %> &nbsp;&nbsp; <%= post.content %></p>
            <p>ジャンル名:<%= post.genre.name %></p>

            <!-- 写真 -->
            <div class="d-flex flex-wrap">
              <% if post.images.attached? %>
                <% post.images.each do |image| %>
                  <div class="mr-3 mb-3">
                    <%= image_tag image, size: "150x150" %>
                  </div>
                <% end %>
              <% end %>
            </div><br>

            <!-- ユーチューブ -->
            <div class="d-flex flex-wrap">
              <% post.youtube_urls.each do |youtube_url| %>
                <div class="mr-3 mb-3">
                  <iframe width="224" height="126" src="https://www.youtube.com/embed/<%= youtube_url.path %>"
                    frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              <% end %>
            </div><br>

            <!-- いいね -->
            <% if post.favorited_by?(current_user) %>
              <%= link_to post_favorites_path(post), method: :delete do %>
                <i class="fas fa-heart" style="color: #eca7df;"></i>
                <%= post.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to post_favorites_path(post), method: :post do %>
                <i class="far fa-heart" style="color: #eca7df;"></i>
                <%= post.favorites.count %>
              <% end %>
            <% end %> &nbsp;&nbsp;

            <!-- ブックマーク -->
            <% if post.bookmarked_by?(current_user) %>
              <%= link_to post_bookmarks_path(post), method: :delete do %>
                <i class="fas fa-bookmark" style="color: #5884d0;"></i>
              <% end %>
            <% else %>
              <%= link_to post_bookmarks_path(post), method: :post do %>
                <i class="far fa-bookmark" style="color: #5884d0;"></i>
              <% end %>
            <% end %> &nbsp;&nbsp;

            <!-- コメント数表示 -->
            <% if current_user.commented_on?(post) %>
              <i class="fas fa-comment" style="color: #48350e;"></i>
              <%= link_to post.comments.count, post_path(post) %>
            <% else %>
              <i class="far fa-comment" style="color: #48350e;"></i>
              <%= link_to post.comments.count, post_path(post) %>
            <% end %><br>

            <!-- 編集と削除ボタン -->
            <% if current_user == post.user %>
              <div class="float-right">
                <div class="btn-group">
                  <%= link_to "編集", edit_post_path(post), class: "btn btn-success" %>
                  <%= link_to "削除", post_path(post), method: :delete, class: "btn btn-danger",
                    data: { confirm: "削除しますか？" } %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
