<div class="container-fluid">
  <div class=" row float-right">
    <%= render 'public/searches/search' %>
  </div>
  <div class="row">
    <div class="col-2">
      <table class="table table-hover table-bordered mt-5">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, posts_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-10">
      <div class="text-center">
        <h2>投稿一覧</h2>
      </div>
      <% @posts.each do |post| %>
        <div class="row border-bottom">
          <div class="col-3">
            <%= render 'public/users/info', user: post.user %>
          </div>

          <div class="col-7">
            <p><%= post.created_at.strftime("%Y/%m/%d") %> &nbsp;&nbsp; <%= post.content %></p>
            <p>ジャンル名:<%= post.genre.name %></p>

            <!-- 写真 -->
            <div class="d-flex flex-wrap">
              <% if post.images.attached? %>
                <% post.images.each do |image| %>
                  <div class="mr-3 mb-3">
                    <%= image_tag image, size: "150x150" %>
                  </div>
                <% end %>
              <% end %>
            </div><br>

            <!-- ユーチューブ -->
            <div class="d-flex flex-wrap">
              <% post.youtube_urls.each do |youtube_url| %>
                <div class="mr-3 mb-3">
                  <iframe width="224" height="126" src="https://www.youtube.com/embed/<%= youtube_url.path %>"
                    frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              <% end %>
            </div><br>
            <%= render 'asynchronous', post: post %>

            <!-- 編集と削除ボタン -->
            <% if current_user == post.user %>
              <div class="float-right">
                <div class="btn-group">
                  <%= link_to "編集", edit_post_path(post), class: "btn btn-success" %>
                  <%= link_to "削除", post_path(post), method: :delete, class: "btn btn-danger", data: { confirm: "削除しますか？" } %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
