<%= flash[:notice] %>
<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>

   <h4>コメント</h4>
  <%= f.text_area :content, rows: 2, style: "width: 30%;" %>

	
  <p>新しい画像をアップロード</p>
  <%= f.file_field :new_images, multiple: true, accept: "image/*" %>
  
  <% if @post.images.present? %>
    <p>現在登録されている画像（削除するものはチェックしてください）</p>
    <% @post.images.each do |image| %>
      <%= f.check_box :image_ids, {multiple: true}, image.id, false %>
      <%= image_tag image, size:"100x100" %> <br>
    <% end %>
  <% end %>


  <% if @post.youtube_url.nil? %>
    <%= link_to "動画URLを追加する", new_post_youtube_urls_path(@post.id) %>
  <% else %>
    <%= link_to "動画URLを編集する", edit_post_youtube_urls_path(@post.id) %>
  <% end %>


  <h4>ジャンル</h4>
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '--選択してください--' } %>

  <%= f.submit '変更を保存' %>
<% end %>