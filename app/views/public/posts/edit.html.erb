<%= flash[:notice] %>
<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>

   <h4>コメント</h4>
  <%= f.text_area :content, rows: 2, style: "width: 30%;" %>

	<h4>画像</h4>
  <%= f.file_field :images, multiple: true, accept: "image/*" %>

  <% if @post.images.attached? %>
    <% @post.images.each do |image| %>
      <%= image_tag image, size: "150x150" %>
    <% end %>
  <% end %><br>

  
  
  <%= link_to "動画を編集はこちら", edit_youtube_url_path(@post) %>

  


  <h4>ジャンル</h4>
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '--選択してください--' } %>

  <%= f.submit '変更を保存' %>
<% end %>
