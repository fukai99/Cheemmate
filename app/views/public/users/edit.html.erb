
  
 
  <%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :disply_name %><br/>
    <%= f.text_field :disply_name, autofocus: true, autocomplete: "disply_name" %>
  </div>
  
  <div class="field">
    <%= f.label :family_relationship %><br/>
    <%= f.text_field :family_relationship, autofocus: true, autocomplete: "family_relationship" %>
  </div>
  
  <div class="field">
    <%= f.label :アイコン画像 %><br/>
    <%= f.file_field :avatar %>
    <%#= f.file_field :image, multiple: true, accept: "image/*" %>
  </div>
  
  <p>本人か</p>
  <%= f.radio_button :is_member, true %>
  <%= f.label :is_member, "生徒" %>
  <%= f.radio_button :is_member, false%>
  <%= f.label :is_member, "家族" %>
 
  <%= f.submit "編集" %>
<% end %>
  
  

  

  