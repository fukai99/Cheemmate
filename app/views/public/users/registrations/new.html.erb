<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label "苗字" %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name",placeholder: "山田" %>
  </div>

  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "花子" %>
  </div>

  <div class="field">
    <%= f.label "表示名" %><br />
    <%= f.text_field :disply_name, autofocus: true, autocomplete: "disply_name",placeholder: "やま" %>
  </div>

  <div class="field">
    <label>
      <%= f.radio_button :is_member, true, autofocus: true, autocomplete: "is_member_true" %>
      生徒
    </label>
    <label>
      <%= f.radio_button :is_member, false, autofocus: true, autocomplete: "is_member_false" %>
      家族
    </label>
  </div>

  <div class="field">
  <%= f.label "詳細" %><br />
  <%= f.text_area :family_relationship, autofocus: true, autocomplete: "family_relationship", placeholder: "生徒：チーム名＋本名\n家族：生徒氏名＋属柄（祖母など）", rows: 2, style: "width: 30%;" %>
  </div>


  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "確認のため再度パスワードをご入力ください" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/users/shared/links" %>
