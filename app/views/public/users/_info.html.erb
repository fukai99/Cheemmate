<%= image_tag user.get_avatar(100, 100) %><br>

<table class="table">
  <tbody>
    <tr>
      <th>氏名</th>
      <th><%= link_to user.disply_name, user_path(user) %></th>
    </tr>
    <tr>
      <th> &nbsp;&nbsp; </th>
      <th><%= user.is_member ? '生徒' : '家族' %></th>
    </tr>
    <tr>
      <th>詳細</th>
      <th><%= user.family_relationship %></th>
    </tr>
  </tbody>
</table>
<% if current_user == user && !user.guest_user? %>
  <%= link_to "ユーザー編集", edit_user_path(user.id),  class: "btn btn-success", style: "border-radius: 6px;" %>
<% end %>





