<h1>会員一覧</h1>
<% @users.each do |user| %>
  氏名:
  <%= user.family_name %>
  <%= user.first_name %>
   表示名:
  <%= user.disply_name %>
  <%= user.is_member ? '生徒' : '家族' %>
  <%= user.family_relationship %>
  
  会員状態:
  <%= user.is_deleted ? '退会済' : '会員' %>
  <% unless user.is_deleted %>
    <%= link_to "編集", edit_admin_user_path(user.id) %>
  <% end %>
  <% unless user.is_deleted %>
    <%= link_to "退会", admin_withdrawal_path(user), method: :patch, data: { confirm: "本当に退会しますか？" } %>
  <% end %>
  
  <br>
<% end %>